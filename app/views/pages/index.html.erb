<% content_for :title, 'Pages' %>
<main class="container max-w-6xl mx-auto px-4 py-8">
  <%# Notice %>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <%# Add New Page Form %>
  <div class="bg-white rounded-lg mb-8">
    <h2 class="text-2xl font-bold mb-4">Add new page</h2>
    <%= form_with model: @page, method: :post, class: 'max-w-3xl' do |form| %>
      <div class="flex gap-4 flex-wrap">
        <%# URL field %>
        <%= form.label :url, class: 'flex-1 grid' do %>
          <span class="sr-only">URL</span>
          <%= form.url_field :url, placeholder: 'https://example.com', required: true, class: 'w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
          <%= form_errors @page, :url %>
        <% end %>
        <%# Scrape button %>
        <%= form.submit 'Scrape', class: 'self-start px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors' %>
      </div>
    <% end %>
  </div>
  <%# Pages listing %>
  <section class="bg-white rounded-lg overflow-hidden">
    <h1 class="font-bold text-4xl mb-4">Pages</h1>
    <div id="pages" class="min-w-full divide-y divide-gray-200 space-y-5 overflow-auto">
      <% if @pages.any? %>
        <table class="w-full rounded">
          <thead class="bg-gray-100 border-b">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Title</th>
              <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Status</th>
              <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">Total links</th>
              <th class="px-6 py-4 text-left text-sm font-medium text-gray-700">URL</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @pages.each do |page| %>
              <tr class="hover:bg-gray-50 cursor-pointer">
                <td class="px-6 py-4 text-sm text-gray-900"><%= page.title %></td>
                <td class="px-6 py-4 text-sm text-gray-900 <%= page.processing? ? 'text-yellow-500' : page.success? ? 'text-green-500' : 'text-red-500' %>"><%= page.status %></td>
                <td class="px-6 py-4 text-sm text-gray-900">10 <%# TODO: page.links.count %></td>
                <td class="px-6 py-4 text-sm text-gray-900 max-w-xs truncate" title="<%= page.url %>"><%= page.url %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-center my-10">No pages found.</p>
      <% end %>
    </div>
  </section>
  <%# Pagination %>
  <div class="flex justify-center mt-8">
    <nav class="flex items-center space-x-1">
      <button class="px-3 py-2 text-sm text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500">
        Previous
      </button>
      <button class="px-3 py-2 text-sm text-white bg-blue-600 border border-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
        1
      </button>
      <button class="px-3 py-2 text-sm text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500">
        2
      </button>
      <button class="px-3 py-2 text-sm text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500">
        3
      </button>
      <button class="px-3 py-2 text-sm text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500">
        Next
      </button>
    </nav>
  </div>
</main>
